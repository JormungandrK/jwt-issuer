{
  "jwt":{
    "issuer": "Jormungandr JWT Authority",
    "signingMethod": "RS512",
    "expiryTime": 30000
  },
  "keys": {
    "default": "/run/secrets/default",
    "system": "/run/secrets/system"
  },
  "microservice": {
    "name": "jwt-issuer",
    "port": 8080,
    "paths": ["/jwt"],
    "virtual_host": "jwt.auth.jormugandr.org",
    "weight": 10,
    "slots": 100
  },
  "services": {
    "user-microservice": "http://kong:8000/users"
  }
}
